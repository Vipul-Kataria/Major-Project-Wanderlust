<%layout("./layouts/boilerplate.ejs")%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    .filter{
        text-align: center;
        margin-right: 3rem;
        margin-top: 2rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor:pointer;
    }
</style>
<body>
    <!-- <h3>All listings</h3> -->
     <div id="filters">
        <div class="filter"><div><i class="fa-solid fa-fire"></i></div><p>Trending</p></div>
        <div class="filter"><div><i class="fa-solid fa-bed"></i></div><p>Rooms</p></div>
        <div class="filter"><div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic Cities </p></div>
        <div class="filter"><div><i class="fa-solid fa-mountain-sun"></i></div><p>Mountains</p></div>
        <div class="filter"><div><i class="fa-solid fa-person-skiing"></i></div><p>Sking</p></div>
        <div class="filter"><div><i class="fa-solid fa-umbrella-beach"></i></div><p>Beach </p></div>
        <div class="filter"><div><i class="fa-solid fa-house"></i></div><p>Cabin</p></div>
        <div class="filter"><div><i class="fa-solid fa-house"></i></div><p>Lake</p></div>
        <div class="filter"><div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p></div>
     </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 listing-card mt-3">


    <% for(list of alllistings){ %>
    <div class="card col listing-card" >
        <a href="/listings/<%=list._id%> "class='listing-link' ><img src="<%=list.image.url%>" class="card-img-top " alt="listing_image"> 
            
            <div class="card-img-overlay">           <!--from bootstrap for overlay-->
                <h5 class="card-title"></h5>
              </div>


        <div class="card-body">
            <p class="card-text">
                <b><%=list.title%></b>
                <br>
                price: &#8377; <%=list.price%>/night
            </p>
        </a> 
        </div>
      </div>
      <% } %>
   


</div>
    
